<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="0dp">


    <LinearLayout
        android:id="@+id/row_top_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/row_main_text"
            android:paddingBottom="5dp"
            android:textSize="22sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:text="Go to the grocery store tomorrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_month_day"
            android:layout_below="@+id/row_main_text"
            android:paddingLeft="15dp"
            android:layout_gravity="right|center_vertical"
            android:singleLine="true"
            android:text="Sep 27, 3:45 PM"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/row_top_panel"
        android:id="@+id/row_detail_text"
        android:textSize="15sp"
        android:textStyle="italic"
        android:singleLine="true"
        android:text="I'm happy to contain a lot of details about this wonderful assignment.  What else is there to say at this point in time?"/>
</RelativeLayout>

